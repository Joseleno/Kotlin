<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.santos.joseleno.convertemp.MainActivity"
    android:orientation="vertical"
    android:padding="16dp">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/valorTemp"
        android:hint="@string/edt_label_temp"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_label_fahr_pour_celcius"
        android:id="@+id/celciusRadio"
        android:checked="false"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rd_label_celcius_pour_fahre"
        android:id="@+id/fahrenheitRadio"
        android:checked="true"/>
    </RadioGroup>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/convertButton"
        android:text="@string/btn_label_convertir"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

</LinearLayout>
